	title			= {A Novel Approach to Borehole Quality Measurement in Unconventional Drilling},
	booktitle		= SPEIADCDRILLINGCONFERENCEEXHBITION,
	month			= {March},
	year			= {2024},
	volume			= {Day 1 Tue, March 05, 2024},
