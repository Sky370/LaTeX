	affiliation		= {},
	title			= {Deep Reinforcement Learning for Automatic Drilling Optimization Using an Integrated Reward Function},
	booktitle		= SPEIADCDRILLINGCONFERENCEEXHBITION,
	month			= {March},
	year			= {2024},
	volume			= {Day 3 Thu, March 07, 2024},
