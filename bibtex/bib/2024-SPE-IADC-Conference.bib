	affiliation		= {},
	title			= {Thermal Stimulation of Annular Shale Barriers for Long-Term Well Integrity},
	booktitle		= SPEIADCDRILLINGCONFERENCEEXHBITION,
	month			= {March},
	year			= {2024},
	volume			= {Day 1 Tue, March 05, 2024},
