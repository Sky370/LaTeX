	title			= {Challenges and Approaches to Solutions for Green Decommissioning and Recycling of Offshore Facilities},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 3 Wed, May 08, 2024},
