	title			= {The Piling in Glauconitic Sands (PIGS) JIP: Reducing Geotechnical Uncertainty for U.S. Offshore Wind Development},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 3 Wed, May 08, 2024},
	pages			= {D031S001R007},
