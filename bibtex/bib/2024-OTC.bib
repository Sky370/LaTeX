	affiliation		= {},
	title			= {A Spatiotemporal Machine Learning Framework for the Prediction of Metocean Conditions in the Gulf of Mexico},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 2 Tue, May 07, 2024},
	pages			= {D021S017R004},
