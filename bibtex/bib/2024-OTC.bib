@inproceedings{ref:jang2024a,
	author			= {Jang, Hyunchul and Jang, Hakun and Teng, YihJeng},
	affiliation		= {},
	title			= {{CFD}-Based Numerical Wave Basin for Floating Offshore Wind Turbines},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
