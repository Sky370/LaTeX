	affiliation		= {},
	title			= {Evaluating Subsea Capping Stack Usage for CO2 Blowouts},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 3 Wed, May 08, 2024},
