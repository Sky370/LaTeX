	title			= {Qualification Approach of OCTG Connections for CCS Injection Wells Tubing and Casing},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 3 Wed, May 08, 2024},
