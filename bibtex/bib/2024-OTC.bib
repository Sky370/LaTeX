
@inproceedings{ref:abdulwarith2024a,
	author			= {Abdulwarith, Abdulrahman and Ammar, Mohamed and Kakadjian, Sarkis and McLaughlin, Nathan and Dindoruk, Birol},
	affiliation		= {},
	title			= {A Hybrid Physics Augmented Predictive Model for Friction Pressure Loss in Hydraulic Fracturing Process Based on Experimental and Field Data},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 3 Wed, May 08, 2024},
	pages			= {D031S030R006},
	organization	= {},
	address			= {},
