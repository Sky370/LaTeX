	title			= {Advance Technologies for Efficient Utilization of Well Slots in Offshore Platforms},
	booktitle		= {OTC Offshore Technology Conference},
	month			= {May},
	year			= {2024},
	volume			= {Day 2 Tue, May 07, 2024},
	pages			= {D021S025R003},
	organization	= {},
