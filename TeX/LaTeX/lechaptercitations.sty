\newcommand*{\chapcite@currentauthor}{author}
\newcommand*{\chapcite@currenttitle}{title}

\newcommand*{\makearticlesectiontitle}{\citet*{\chapcite@currentauthor}: \emph{\chapcite@currenttitle}}

\newcommand*{\newarticle}[2]
{
    \renewcommand*{\chapcite@currentauthor}{#1}
    \renewcommand*{\chapcite@currenttitle}{#2}
    \section{\makearticlesectiontitle{}}
