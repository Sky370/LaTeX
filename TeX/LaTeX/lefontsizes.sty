\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{lefontsizes}[2006/06/25 Font Size Package]

% lefontsizes.sty
% Contains standard font sizes.

% Special font sizes.
\providecommand*{\footnotesize}{\fontsize{9pt}{10pt}\selectfont}
\providecommand*{\scriptsize}{\fontsize{8pt}{9pt}\selectfont}
\newcommand*{\titlesize}{\fontsize{15pt}{18pt}\selectfont}

% A range of font sizes.
\providecommand*{\tiny}{\fontsize{7pt}{8pt}\selectfont}
\providecommand*{\small}{\fontsize{10pt}{12pt}\selectfont}
\providecommand*{\Small}{\fontsize{11pt}{13.5pt}\selectfont}
\renewcommand*{\normalsize}{\fontsize{12pt}{15pt}\selectfont}
\newcommand*{\Normal}{\fontsize{13pt}{16pt}\selectfont}
\providecommand*{\large}{\fontsize{14pt}{18pt}\selectfont}
\providecommand*{\Large}{\fontsize{17pt}{22pt}\selectfont}
\providecommand*{\LARGE}{\fontsize{20pt}{25pt}\selectfont}
\providecommand*{\huge}{\fontsize{25pt}{30pt}\selectfont}
\providecommand*{\Huge}{\fontsize{30pt}{36pt}\selectfont}