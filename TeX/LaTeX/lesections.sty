%
% OR
%
% \usepackage[usechapterstyleb]{lesections}
% \usepackage{contentsindexbibformat}
%
% OR
%
% \usepackage{lesections}
% \usepackage{contentsindexbibformat}
\DeclareOption{addlofchapterds}
